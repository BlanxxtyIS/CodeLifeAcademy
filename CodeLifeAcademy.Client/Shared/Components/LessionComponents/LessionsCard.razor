@inject NavigationManager _navManager

<div class="container-topic">
    <div class="palette">
        @foreach (var lession in Lessions) {
            <div class="color">
                <button @onclick="() => GoToLession(lession.Id)">@lession.Title</button>
            </div>
        }
    </div>
    <div id="stats">
        <span>213123 Учеников</span>
