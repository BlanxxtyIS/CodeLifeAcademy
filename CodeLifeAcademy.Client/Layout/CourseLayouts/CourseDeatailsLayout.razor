<div class="drawer-wrapper @(_isOpen ? "slide" : "")">
    <div class="drawer-mask"></div>
    <div class="drawer">
        @if (_actionCourse is not null) {
            <div class="drawer-content">
                <img src="@_actionCourse.Image" />
                <div class="course-details">
                    <h3>@_actionCourse.Title</h3>
                    <div class="mt-4">
                        <span class="mr-5">
                            <span class="oi oi-clock mr-2"></span>
                            @_actionCourse.TimeFormatted
                        </span>
                        <span>
                            <span class="oi oi-infinity mr-2"></span>
                            @_actionCourse.Progress %
                        </span>
                    </div>
                    <p class="mt-4">@_actionCourse.Description</p>
                </div>
            </div>
            <div class="drawer-controls">
                <button class="btn btn-secondary"
                @onclick="Close">Закрыть</button>
            </div>
        }
    </div>
</div>

@code {
    private bool _isOpen;
    private Course? _actionCourse;

    [Parameter, EditorRequired]
    public Course? Course { get; set; }

    protected override void OnParametersSet()
    {
        if (Course != null)
        {
            _actionCourse = Course;
            _isOpen = true;
        }
    }

    private void Close() {
        _actionCourse = null;
        _isOpen = false;
    }
}